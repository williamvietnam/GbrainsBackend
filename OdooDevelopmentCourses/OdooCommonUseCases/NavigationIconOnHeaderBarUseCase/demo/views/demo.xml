<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="demo_view_tree" model="ir.ui.view">
        <field name="name">demo.view.tree</field>
        <field name="model">demo</field>
        <field name="arch" type="xml">
            <tree export_xlsx="0">
                <field name="name" optional="show"/>
                <field name="detail" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="demo_view_form" model="ir.ui.view">
        <field name="name">demo.view.form</field>
        <field name="model">demo</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="detail"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
