        <!--_________________________________________________________________________________________-->
        <!--_____________________________________Actions______________________________________-->
        <!--Helpdesk action-->
        <record id="helpdesk_action" model="ir.actions.act_window">
            <field name="name">Helpdesk Overview</field>
            <field name="res_model">helpdesk.model</field>
            <field name="view_id" ref="helpdesk_module.helpdesk_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Hello, This is Helpdesk Overview
                </p>
            </field>
        </record>

        <!--MyTickets action-->
        <record id="mytickets_action" model="ir.actions.act_window">
            <field name="name">My Tickets</field>
            <field name="res_model">tickets.tickets.model</field>
            <field name="view_id" ref="helpdesk_module.mytickets_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Hello, This is My Tickets Page
                </p>
            </field>
        </record>

        <!--AllTickets action-->
        <record id="alltickets_action" model="ir.actions.act_window">
            <field name="name">All Tickets</field>
            <field name="res_model">tickets.tickets.model</field>
            <field name="view_id" ref="helpdesk_module.alltickets_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Hello, This is All Tickets Page
                </p>
            </field>
        </record>

