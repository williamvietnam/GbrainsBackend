        <!--_________________________________________________________________________________________-->
        <!--_____________________________________Views_____________________________________-->
        <!--Helpdesk view-->
        <record id="helpdesk_tree" model="ir.ui.view">
            <field name="name">helpdesk.tree</field>
            <field name="model">helpdesk.model</field>
            <field name="arch" type="xml">
                <tree string="Helpdesk Overview" editable="bottom">
                    <field name="tickets"/>
                    <field name="performance"/>
                </tree>
            </field>
        </record>

        <!--MyTickets view-->
        <record id="mytickets_tree" model="ir.ui.view">
            <field name="name">mytickets.tree</field>
            <field name="model">tickets.tickets.model</field>
            <field name="arch" type="xml">
                <tree string="My Tickets">
                    <field name="name"/>
                    <field name="helpdesk_team"/>
                    <field name="assigned_to"/>
                    <field name="customer"/>
                    <field name="company"/>
                    <field name="next_activity"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>
        <!--AllTickets view-->
        <record id="alltickets_tree" model="ir.ui.view">
            <field name="name">alltickets.tree</field>
            <field name="model">tickets.tickets.model</field>
            <field name="arch" type="xml">
                <tree string="All Tickets">
                    <field name="name"/>
                    <field name="helpdesk_team"/>
                    <field name="assigned_to"/>
                    <field name="customer"/>
                    <field name="company"/>
                    <field name="next_activity"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>
