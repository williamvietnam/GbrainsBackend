<odoo>
    <data>
        <!--_____________________________________MenuItems_____________________________________-->
        <menuitem
                name="Helpdesk"
                id="root_menu"
                web_icon="mail,static/description/icon.png"
                sequence="1"/>

        <!--Menu cấp 1-->
        <menuitem
                name="Overview"
                parent="root_menu"
                action="helpdesk_action"
                sequence="1"/>

        <menuitem
                name="Tickets"
                id="root_menu"
                parent="root_menu"
                sequence="2"/>

        <menuitem
                name="Reporting"
                id="root_menu"
                parent="root_menu"
                sequence="3"/>

        <menuitem
                name="Configuration"
                id="root_menu"
                parent="root_menu"
                sequence="4"/>

        <!--Menu cấp 2 của Tickets menu-->
        <menuitem
                name="My Tickets"
                id="root_tickets_menu"
                parent="root_tickets_menu"
                action="mytickets_action"
                sequence="1"/>

        <menuitem
                name="All Tickets"
                id="root_tickets_menu"
                parent="root_tickets_menu"
                action="alltickets_action"
                sequence="2"/>

        <!--Menu cấp 2 của Reporting menu-->
