            <tree string="All Tickets">
                <field name="name"/>
                <field name="helpdesk_team"/>
                <field name="assigned_to"/>
                <field name="customer"/>
                <field name="company"/>
                <field name="next_activity"/>
                <field name="type"/>
            </tree>
        </field>
    </record>
