<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--_____________________________________MenuItems_____________________________________-->
    <menuitem
            name="HelpdeskDemo"
            id="root_menu_demo"
            action="helpdesk_action"
            sequence="4"/>

    <!--Menu cấp 1-->
    <menuitem
            name="Overview"
            action="helpdesk_action"
            parent="root_menu_demo"
            sequence="1"/>

    <menuitem
            name="Tickets"
            id="root_tickets_menu"
            parent="root_menu_demo"
            sequence="2"/>

    <menuitem
            name="Reporting"
            id="root_reporting_menu"
            parent="root_menu_demo"
            sequence="3"/>

    <menuitem
            name="Configuration"
            id="root_configuration_menu"
            parent="root_menu_demo"
            sequence="4"/>

    <!--Menu cấp 2 của Tickets menu-->
    <menuitem
            name="My Tickets"
            id="my_tickets"
            parent="root_tickets_menu"
            action="mytickets_action"
            sequence="1"/>

    <menuitem
            name="All Tickets"
            id="all_tickets"
            parent="root_tickets_menu"
            action="alltickets_action"
            sequence="2"/>

    <!--Menu cấp 2 của Reporting menu-->
    <menuitem
            name="Tickets Analysis"
            id="tickets_analysis"
            parent="root_reporting_menu"
            action="tickets_analysis_action"
            sequence="1"/>

    <menuitem
            name="SLA Status Analysis"
            id="sla_status_analysis"
            parent="root_reporting_menu"
            action="sla_status_analysis_action"
            sequence="2"/>

    <menuitem
            name="Customers Ratings"
            id="customer_ratings"
            parent="root_reporting_menu"
            action="customer_ratings_action"
            sequence="3"/>


    <!--Menu cấp 2 của Configuration menu-->
    <menuitem
            name="Helpdesk Teams"
            id="helpdesk_team"
            parent="root_configuration_menu"
            action="helpdesk_teams_action"
            sequence="1"/>

    <menuitem
            name="Types"
            id="types"
            parent="root_configuration_menu"
            action="types_action"
            sequence="2"/>

    <menuitem
            name="Stages"
            id="stages"
            parent="root_configuration_menu"
            action="stages_action"
            sequence="3"/>

    <menuitem
            name="SLA Policies"
            id="sla_policies"
            parent="root_configuration_menu"
            action="sla_policies_action"
            sequence="4"/>

    <!--_________________________________________________________________________________________-->
    <!--_____________________________________Views_____________________________________-->

    <!--Helpdesk view-->
    <record id="helpdesk_tree" model="ir.ui.view">
        <field name="name">helpdesk.tree</field>
        <field name="model">helpdesk</field>
        <field name="arch" type="xml">
            <tree string="Helpdesk Overview" editable="bottom">
                <field name="tickets"/>
                <field name="performance"/>
            </tree>
        </field>
    </record>

    <!--MyTickets view-->
    <record id="mytickets_tree" model="ir.ui.view">
        <field name="name">mytickets.tree</field>
        <field name="model">tickets.tickets</field>
        <field name="arch" type="xml">
            <tree string="My Tickets">
                <field name="name"/>
                <field name="helpdesk_team"/>
                <field name="assigned_to"/>
                <field name="customer"/>
                <field name="company"/>
                <field name="next_activity"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!--AllTickets view-->
    <record id="alltickets_tree" model="ir.ui.view">
        <field name="name">alltickets.tree</field>
        <field name="model">tickets.tickets</field>
        <field name="arch" type="xml">
            <tree string="All Tickets">
                <field name="name"/>
                <field name="helpdesk_team"/>
                <field name="assigned_to"/>
                <field name="customer"/>
                <field name="company"/>
                <field name="next_activity"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!--TicketsAnalysis view-->
    <record id="ticketsanalysis_tree" model="ir.ui.view">
        <field name="name">ticketsanalysis.tree</field>
        <field name="model">reporting.tickets.analysis</field>
        <field name="arch" type="xml">
            <tree string="Tickets Analysis">
                <field name="new"/>
                <field name="in_progress"/>
                <field name="solved"/>
                <field name="cancelled"/>
                <field name="done"/>
            </tree>
        </field>
    </record>

    <!--SLAStatusAnalysis view-->
    <record id="slastatusanalysis_tree" model="ir.ui.view">
        <field name="name">slastatusanalysis.tree</field>
        <field name="model">reporting.sla.status.analysis</field>
        <field name="arch" type="xml">
            <tree string="SLA Status Analysis">
                <field name="total"/>
            </tree>
        </field>
    </record>

    <!--CustomerRatings view-->
    <record id="customerrating_tree" model="ir.ui.view">
        <field name="name">customerrating.tree</field>
        <field name="model">reporting.customer.rating</field>
        <field name="arch" type="xml">
            <tree string="Customer Ratings">
                <field name="name"/>
                <field name="customer"/>
                <field name="ticket"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>

    <!--HelpdeskTeams view-->
    <record id="helpdeskteams_tree" model="ir.ui.view">
        <field name="name">helpdeskteams.tree</field>
        <field name="model">configuration.helpdesk.team</field>
        <field name="arch" type="xml">
            <field name="name"/>
            <field name="alias_email"/>
            <field name="company"/>
        </field>
    </record>

    <!--Types view-->
    <record id="types_tree" model="ir.ui.view">
        <field name="name">types.tree</field>
        <field name="model">configuration.types</field>
        <field name="arch" type="xml">
            <field name="name"/>
        </field>
    </record>

    <!--Stages view-->
    <record id="stages_tree" model="ir.ui.view">
        <field name="name">stages.tree</field>
        <field name="model">configuration.stages</field>
        <field name="arch" type="xml">
            <field name="name"/>
            <field name="helpdesk_teams"/>
        </field>
    </record>

    <!--SLA Policies view-->
    <record id="slapolicies_tree" model="ir.ui.view">
        <field name="name">slapolicies.tree</field>
        <field name="model">configuration.sla.policies</field>
        <field name="arch" type="xml">
            <field name="name"/>
            <field name="helpdesk_team"/>
        </field>
    </record>

    <!--_________________________________________________________________________________________-->
    <!--_____________________________________Actions______________________________________-->
    <!--Helpdesk action-->
    <record id="helpdesk_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Overview</field>
        <field name="res_model">helpdesk</field>
        <field name="view_id" ref="helpdesk_module.helpdesk_tree"/>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Hello, This is Helpdesk Overview
            </p>
        </field>
    </record>

    <!--MyTickets action-->
    <record id="mytickets_action" model="ir.actions.act_window">
        <field name="name">My Tickets</field>
        <field name="res_model">tickets.tickets</field>
        <field name="view_id" ref="helpdesk_module.mytickets_tree"/>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Hello, This is My Tickets Page
            </p>
        </field>
    </record>

    <!--AllTickets action-->
    <record id="alltickets_action" model="ir.actions.act_window">
        <field name="name">All Tickets</field>
        <field name="res_model">tickets.tickets</field>
        <field name="view_id" ref="helpdesk_module.alltickets_tree"/>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Hello, This is All Tickets Page
            </p>
        </field>
    </record>

    <!--TicketsAnalysis action-->
    <record id="ticketsanalysis_action" model="ir.actions.act_window">
        <field name="name">Tickets Analysis</field>
        <field name="res_model">reporting.tickets.analysis</field>
        <field name="view_id" ref="helpdesk_module.ticketsanalysis_tree"/>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tickets Analysis Page
            </p>
        </field>
    </record>

    <!--SLAStatusAnalysis action-->
    <record id="slastatusanalysis_action" model="ir.actions.act_window">
        <field name="name">SLA Status Analysis</field>
        <field name="res_model">reporting.sla.status.analysis</field>
        <field name="view_id" ref="helpdesk_module.slastatusanalysis_tree"/>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                SLA Status Analysis Page
            </p>
        </field>
    </record>

    <!--CustomerRatings action-->
    <record id="customerratings_action" model="ir.actions.act_window">
        <field name="name">Customer Ratings</field>
        <field name="res_model">reporting.customer.rating</field>
        <field name="view_id" ref="helpdesk_module.customerrating_tree"/>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Customer Ratings Page
            </p>
        </field>
    </record>

    <!--HelpdeskTeams action-->
    <record id="helpdeskteams_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Teams</field>
        <field name="view_mode">tree</field>
        <field name="res_model">configuration.helpdesk.team</field>
        <field name="view_id" ref="helpdesk_module.helpdeskteams_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Helpdesk Teams Page
            </p>
        </field>
    </record>

    <!--Types action-->
    <record id="types_action" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">configuration.types</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="helpdesk_module.types_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Types Page
            </p>
        </field>
    </record>

    <!--Stages action-->
    <record id="stages_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">configuration.stages</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="helpdesk_module.stages_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Stages Page
            </p>
        </field>
    </record>

    <!--SLA Policies action-->
    <record id="slapolicies_action" model="ir.actions.act_window">
        <field name="name">SLA Policies</field>
        <field name="res_model">configuration.sla.policies</field>
        <field name="view_id" ref="helpdesk_module.slapolicies_tree"/>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                SLA Policies Page
            </p>
        </field>
    </record>
</odoo>