<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.store</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="NBGSoftware Document File Upload" string="NBGSoftware Document File Upload"
                     data-key="nbgsoftware_document_file_size"
                     id="nbgsoftware_document_file_size">
                    <h2>File Size Upload</h2>
                    <div class="row mt16 o_settings_container" id="store_setting">
                        <div class="col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Connect Systems NBGSoftware</span>
                                <span class="fa fa-lg fa-building-o"
                                      title="Values set here are connect systems nbgsoftware document."
                                      aria-label="Values set here are connect systems nbgsoftware document."
                                      groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Values set.
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Upload file maximum size" for="max_file_upload_size" class="col-lg-3 o_form_label "/>
                                        <field name="max_file_upload_size"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
